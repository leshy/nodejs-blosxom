<div class='blogpost'>
  <div class='header'>
    <a href='/article/<%= post.link %>'><span class='title'><%= post.title %></span></a>
    <span class='tags'><%= post.tags %></span>
    <span class='date'><%=: new Date(post.modified) | prettyDate %></span>
  </div>
  <div class='body'>
    
    <%- post.body %>
  </div>
</div>
